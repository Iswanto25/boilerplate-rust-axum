{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Rust Components",
      "type": "shell",
      "command": "rustup",
      "args": [
        "component",
        "add",
        "rust-src",
        "rust-analysis",
        "rustfmt",
        "clippy"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Build",
      "type": "cargo",
      "command": "build",
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run",
      "type": "cargo",
      "command": "run",
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "Test",
      "type": "cargo",
      "command": "test",
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
